<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icsplash"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/NaverLoginlayout"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="215dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/naverlogo" />

        <Button
            android:id="@+id/NaverLoginbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:background="#16d013"
            android:text="Naver Login"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/KakaoLoginlayout"
    android:layout_width="250dp"
    android:layout_height="45dp"
    android:layout_below="@+id/NaverLoginlayout"
    android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/kakaologo" />

        <Button
            android:id="@+id/KakaoLoginbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eee428"
            android:text="KaKao Login"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/FacebookLoginlayout"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/KakaoLoginlayout"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"
        android:background="@color/com_facebook_button_background_color">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/com_facebook_button_icon_blue" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonFacebookLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/Google_Loginbtn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/FacebookLoginlayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp" />

</RelativeLayout>
